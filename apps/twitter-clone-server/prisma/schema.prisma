datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  likes     Int?
  retweets  Int?
  text      String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Profile {
  bio       String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  location  String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  website   String?
}

model Follow {
  createdAt DateTime @default(now())
  follower  String?
  following String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  password  String
  profiles  Profile[]
  roles     Json
  tweets    Tweet[]
  updatedAt DateTime  @updatedAt
  username  String    @unique
}
